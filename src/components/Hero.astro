---
// Hero section component - Dark mode only
---

<section id="inicio" class="relative h-screen flex items-center justify-center overflow-hidden bg-transparent z-10">
  <!-- Main Content -->
  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 h-full flex flex-col justify-center items-center text-center">
    <!-- Main Logo - Hero -->
    <div class="mb-12">
      <img src="/assets/imagetype.png" alt="Practikal Logo" class="w-auto h-20 md:h-24 lg:h-28 mx-auto">
    </div>

    <!-- Main Title -->
    <h1 class="hero-title text-4xl md:text-6xl lg:text-7xl font-bold leading-tight mb-8">
      <span class="bg-gradient-to-r from-white via-gray-100 to-gray-200 bg-clip-text text-transparent">
        Soluciones
      </span>
      <br>
      <span class="text-light-aqua">
        Empresariales
      </span>
      <span class="text-orange">
        Innovadoras
      </span>
    </h1>

    <!-- Badge -->
    <!-- <div class="inline-flex items-center px-4 py-2 bg-gray-800/90 backdrop-blur-sm rounded-full border border-gray-700/50 mb-8">
      <div class="w-3 h-3 bg-light-aqua rounded-full mr-3 animate-pulse shadow-xl shadow-light-aqua/80 ring-2 ring-light-aqua/30"></div>
      <span class="text-sm font-medium text-gray-300">Más de 20 años de experiencia</span>
    </div> -->

    <!-- Subtitle -->
    <p class="hero-subtitle text-lg md:text-xl text-gray-300 max-w-2xl leading-relaxed mb-10">
      Transformamos tu negocio con tecnología avanzada y consultoría especializada. Resultados garantizados.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 mb-12">
      <a href="#contacto" class="group relative overflow-hidden bg-accent-500/70 hover:bg-accent-500/100 text-white font-semibold px-8 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-primary-500/25">
        <span class="relative z-10">Consulta Gratuita</span>
        <div class="absolute inset-0  bg-accent-500/70 hover:bg-accent-500/100 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </a>
      <a href="#servicios" class="group relative overflow-hidden bg-gray-800/90 backdrop-blur-sm border border-gray-700/50 text-white font-semibold px-8 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-gray-800/25">
        <span class="relative z-10">Ver Servicios</span>
        <div class="absolute inset-0 bg-gradient-to-r from-gray-700 to-gray-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      </a>
    </div>

    <!-- Statistics -->
    <div class="grid grid-cols-3 gap-8 mb-8">
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-white">20+</div>
        <div class="text-sm text-gray-400">Años</div>
      </div>
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-white">500+</div>
        <div class="text-sm text-gray-400">Proyectos</div>
      </div>
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-white">98%</div>
        <div class="text-sm text-gray-400">Satisfacción</div>
      </div>
    </div>


  </div>
</section>

<style>
  @keyframes float-1 {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
  }
  
  @keyframes float-2 {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(-180deg); }
  }
  
  @keyframes float-3 {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-25px) rotate(90deg); }
  }
  
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.8; }
  }
  
  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float-1 { animation: float-1 6s ease-in-out infinite; }
  .animate-float-2 { animation: float-2 8s ease-in-out infinite; }
  .animate-float-3 { animation: float-3 7s ease-in-out infinite; }
  .animate-pulse-slow { animation: pulse-slow 4s ease-in-out infinite; }
  .animate-bounce-slow { animation: bounce-slow 3s ease-in-out infinite; }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // Hero content animation
    gsap.fromTo('.hero-content', 
      { opacity: 0, x: -50 },
      { opacity: 1, x: 0, duration: 1, ease: 'power2.out' }
    );

    // Title animation
    gsap.fromTo('.hero-title', 
      { opacity: 0, y: 30 },
      { opacity: 1, y: 0, duration: 0.8, delay: 0.3, ease: 'power2.out' }
    );

    // Subtitle animation
    gsap.fromTo('.hero-subtitle', 
      { opacity: 0, y: 20 },
      { opacity: 1, y: 0, duration: 0.6, delay: 0.5, ease: 'power2.out' }
    );



    // Floating elements parallax for global elements
    gsap.to('.floating-element', {
      y: -30,
      duration: 2,
      ease: 'power1.inOut',
      stagger: 0.2,
      repeat: -1,
      yoyo: true
    });
  });
</script> 