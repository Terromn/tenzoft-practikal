// Services section component
---

<section id="servicios" class="relative py-20 bg-transparent z-10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="services-title font-display font-bold text-4xl md:text-5xl text-dark-aqua dark:text-white mb-6">
        Nuestros <span class="text-orange">Servicios</span>
      </h2>
      <p class="services-subtitle text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Ofrecemos soluciones integrales adaptadas a las necesidades específicas de tu empresa, 
        con el respaldo de más de 20 años de experiencia en el mercado.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <!-- Service 1: Consultoría Especializada -->
      <div class="service-card bg-gray-800/90 backdrop-blur-xl rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-white/10">
        <div class="service-header bg-gradient-to-r from-light-aqua to-aqua p-6">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="font-display font-semibold text-xl text-white mb-2">Consultoría Especializada</h3>
          <p class="text-white/90 text-sm">Asignaciones especializadas con consultores expertos</p>
        </div>
        <div class="p-6">
          <ul class="space-y-3 text-gray-600 dark:text-gray-300">
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-light-aqua mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Análisis de procesos empresariales</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-light-aqua mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Optimización de operaciones</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-light-aqua mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Estrategias de crecimiento</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-light-aqua mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Transformación digital</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Service 2: Equipos Multidisciplinarios -->
      <div class="service-card bg-gray-800/90 backdrop-blur-xl rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-white/10">
        <div class="service-header bg-gradient-to-r from-orange to-orange/80 p-6">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="font-display font-semibold text-xl text-white mb-2">Equipos Multidisciplinarios</h3>
          <p class="text-white/90 text-sm">Profesionales especializados en diferentes áreas</p>
        </div>
        <div class="p-6">
          <ul class="space-y-3 text-gray-600 dark:text-gray-300">
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-orange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Expertos en tecnología</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-orange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Consultores de negocio</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-orange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Especialistas en infraestructura</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-orange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Gestores de proyecto</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Service 3: Soporte Integral -->
      <div class="service-card bg-gray-800/90 backdrop-blur-xl rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-white/10">
        <div class="service-header bg-gradient-to-r from-aqua to-dark-aqua p-6">
          <div class="w-16 h-16 bg-white/20 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <h3 class="font-display font-semibold text-xl text-white mb-2">Soporte Integral</h3>
          <p class="text-white/90 text-sm">Infraestructura y soporte al usuario 24/7</p>
        </div>
        <div class="p-6">
          <ul class="space-y-3 text-gray-600 dark:text-gray-300">
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-aqua mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Monitoreo continuo</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-aqua mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Mantenimiento preventivo</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-aqua mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Respuesta inmediata</span>
            </li>
            <li class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-aqua mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Capacitación de usuarios</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Process Section -->
    <div class="process-section bg-gray-800/90 backdrop-blur-xl rounded-2xl shadow-lg p-8 md:p-12 border border-white/10">
      <div class="text-center mb-12">
        <h3 class="process-title font-display font-semibold text-3xl text-dark-aqua dark:text-white mb-4">
          Nuestro Proceso de Trabajo
        </h3>
        <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Seguimos una metodología probada que garantiza resultados exitosos en cada proyecto.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Step 1 -->
        <div class="process-step text-center">
          <div class="step-number w-16 h-16 bg-light-aqua rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">1</span>
          </div>
          <h4 class="font-display font-semibold text-lg text-dark-aqua dark:text-white mb-2">Análisis</h4>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Evaluamos tu situación actual y identificamos oportunidades de mejora.
          </p>
        </div>

        <!-- Step 2 -->
        <div class="process-step text-center">
          <div class="step-number w-16 h-16 bg-orange rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">2</span>
          </div>
          <h4 class="font-display font-semibold text-lg text-dark-aqua dark:text-white mb-2">Estrategia</h4>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Desarrollamos una estrategia personalizada para alcanzar tus objetivos.
          </p>
        </div>

        <!-- Step 3 -->
        <div class="process-step text-center">
          <div class="step-number w-16 h-16 bg-aqua rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">3</span>
          </div>
          <h4 class="font-display font-semibold text-lg text-dark-aqua dark:text-white mb-2">Implementación</h4>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Ejecutamos la solución con nuestro equipo de expertos multidisciplinarios.
          </p>
        </div>

        <!-- Step 4 -->
        <div class="process-step text-center">
          <div class="step-number w-16 h-16 bg-dark-aqua rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">4</span>
          </div>
          <h4 class="font-display font-semibold text-lg text-dark-aqua dark:text-white mb-2">Soporte</h4>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Brindamos soporte continuo para garantizar el éxito a largo plazo.
          </p>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16">
      <h3 class="cta-title font-display font-semibold text-2xl text-white mb-4">
        ¿Listo para Transformar tu Empresa?
      </h3>
      <p class="text-white/90 mb-8 max-w-2xl mx-auto">
        Agenda una consulta gratuita con nuestros expertos y descubre cómo podemos ayudarte a alcanzar tus objetivos.
      </p>
      <a href="#contacto" class="services-cta bg-gradient-to-r from-light-aqua to-aqua text-white font-semibold px-8 py-4 rounded-lg hover:shadow-lg transition-all duration-300 transform hover:scale-105">
        Consulta Gratuita
      </a>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // GSAP Animations
    if (typeof window !== 'undefined' && (window as any).gsap) {
      const gsap = (window as any).gsap;
      const ScrollTrigger = (window as any).ScrollTrigger;
      
      gsap.registerPlugin(ScrollTrigger);

      // Services title animation
      gsap.fromTo('.services-title', 
        { opacity: 0, y: 30 },
        { 
          opacity: 1, 
          y: 0, 
          duration: 0.8, 
          ease: 'power2.out',
          scrollTrigger: {
            trigger: '.services-title',
            start: 'top 80%',
            end: 'bottom 20%',
            toggleActions: 'play none none reverse'
          }
        }
      );

      // Service cards animation
      gsap.fromTo('.service-card', 
        { opacity: 0, y: 40, scale: 0.9 },
        { 
          opacity: 1, 
          y: 0, 
          scale: 1,
          duration: 0.8, 
          stagger: 0.2,
          ease: 'power2.out',
          scrollTrigger: {
            trigger: '.service-card',
            start: 'top 70%',
            end: 'bottom 30%',
            toggleActions: 'play none none reverse'
          }
        }
      );

      // Process steps animation
      gsap.fromTo('.process-step', 
        { opacity: 0, y: 30 },
        { 
          opacity: 1, 
          y: 0, 
          duration: 0.6, 
          stagger: 0.2,
          ease: 'power2.out',
          scrollTrigger: {
            trigger: '.process-section',
            start: 'top 70%',
            end: 'bottom 30%',
            toggleActions: 'play none none reverse'
          }
        }
      );
    }
  });
</script>

<style>
  .service-card {
    transition: all 0.3s ease;
  }
  
  .service-card:hover {
    transform: translateY(-5px);
  }
  
  .process-step {
    transition: all 0.3s ease;
  }
  
  .process-step:hover {
    transform: translateY(-5px);
  }
</style> 